# ModMap
cmap() {
	setxkbmap -option "ctrl:swapcaps"
	xcape -e 'Control_L=Escape'
	# xmodmap -e 'keycode 108 = BackSpace'
}
kmap() {
	setxkbmap -option
	killall xcape
}

# Use lf to switch directories and bind it to ctrl-o
lfcd () {
    tmp="$(mktemp)"
    lf -last-dir-path="$tmp" "$@"
    if [ -f "$tmp" ]; then
        dir="$(cat "$tmp")"
        rm -f "$tmp" >/dev/null
        [ -d "$dir" ] && [ "$dir" != "$(pwd)" ] && cd "$dir"
    fi
}
