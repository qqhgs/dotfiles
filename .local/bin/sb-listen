#!/bin/sh

. ~/dotfiles/.local/bin/bar_theme

state=$(mpc | sed -n "2{p;q}" | awk '{split($1, a, "]"); printf substr(a[1], 2);}')
title="^b$grey^^c$yellow^ $(mpc -f %title% current) ^d^"

# icon
playing="^b$yellow^^c$black^  ^d^"
paused="^b$yellow^^c$black^  ^d^"

if [ "$state" = "playing" ]; then
	printf "$playing$title"
elif [ "$state" = "paused" ]; then
	printf "$paused$title"
fi
